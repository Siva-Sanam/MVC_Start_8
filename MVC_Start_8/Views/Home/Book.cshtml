    <!-- Bootstrap JS -->
    <script>
        function calculatePrice() {
            const carTypeSelect = document.getElementById('carType');
            const selectedCarType = carTypeSelect.value;
            const pricePerHour = parseFloat(carTypeSelect.options[carTypeSelect.selectedIndex].getAttribute('data-price'));

            // Get the from and to date inputs
            const fromDate = new Date(document.getElementById('From').value);
            const toDate = new Date(document.getElementById('To').value);

            // Calculate the duration in hours
            const durationHours = (toDate - fromDate) / (1000 * 60 * 60);

            // Calculate the total price
            const totalPrice = pricePerHour * durationHours;

            // Update the price input field or display the calculated price
            document.getElementById('Price').value = totalPrice.toFixed(2); // Adjust as needed
        }
        function bookCar() {
            // Process booking here (if needed)

            // Redirect to success page
            window.location.href = "Success.cshtml";
        }

        // Add event listeners for date inputs
        document.getElementById('From').addEventListener('change', calculatePrice);
        document.getElementById('To').addEventListener('change', calculatePrice);
    </script>
